<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/newContent/{{data._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên</label>
            <input type="text" class="form-control" value="{{data.name}}" id="name" name="name">
        </div>
         <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" value="{{data.description}}" id="description" name="description">
        </div>
         <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" class="form-control" value="{{data.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{data.level}}" id="level" name="level">
        </div>
 
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>